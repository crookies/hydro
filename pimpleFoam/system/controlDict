FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pimpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         5;

deltaT          1e-5;

writeControl    adjustable;

writeInterval   1e-1;

purgeWrite      0;

writeFormat     binary;

writePrecision  10;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  yes;

maxCo           0.8;


functions
{
   forces
   {
       type            forces;
       libs            (forces);

       writeControl    runTime;
       writeInterval   0.01;

       patches         (hydro);
       rho             rhoInf;
       rhoInf          1025;
       CofR            (0 0 0);
   }
}
