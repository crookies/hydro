FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      surfaceFeatureExtractDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

hydro_assembly.stl
{
    // How to find the edges:
    extractionMethod    extractFromSurface;

    extractFromSurfaceCoeffs
    {
        includedAngle       150; // Captures everything sharper than 150 degrees (includes 90) 
    }

    // Options to handle bad geometry
    subsetFeatures
    {
        nonManifoldEdges    no;
        openEdges           yes;
    }
    
    // Output options
    writeObj            yes; // Writes an .obj file to visualize features in ParaView
}

// ************************************************************************* //