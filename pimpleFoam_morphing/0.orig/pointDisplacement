\*---------------------------------------------------------------------------*/
FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    // The Moving patch
    hydro
    {
        // 'calculated' allows the solver to control this patch via dynamicMeshDict
        type            calculated; 
    }

    // All other patches (Inlet, Outlet, Walls, Symmetry)
    // They must NOT move, so we lock them to 0.
    "(.*)" 
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
}
// ************************************************************************* //
